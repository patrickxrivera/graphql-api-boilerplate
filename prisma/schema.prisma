generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["uncheckedScalarInputs"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model pgmigrations {
  id     Int      @default(autoincrement()) @id
  name   String
  run_on DateTime
}

model Post {
  id        Int      @default(autoincrement()) @id
  content   String?
  published Boolean  @default(false)
  title     String
  authorId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])

  @@map("posts")
}

model User {
  id            Int             @default(autoincrement()) @id
  email         String          @unique
  name          String?
  password      String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  posts         Post[]
  refreshTokens refreshTokens[] @relation("refreshTokensTousers")

  @@map("users")
}

model refreshTokens {
  id        Int       @default(autoincrement()) @id
  userId    Int
  revokedAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  users     User      @relation("refreshTokensTousers", fields: [userId], references: [id])
}